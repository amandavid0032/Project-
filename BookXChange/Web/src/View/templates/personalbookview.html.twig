
<section class="section-padding  mt-2 pt-5">
	<div class="container">
		<div class="pageTitle">
			<h2>Books Description</h2>
		</div>
		<div class="row">
			<div class="col-sm-4">
				<div class="bookCover">
					<img src="../Upload/Books/{{bookdetail.image}}">
				</div>
			</div>
			<div class="col-sm-8">
				<div class="bookDetails">
					<h4>{{bookdetail.book_name}}</h4>
					<div class="row mt-3 bookInfoMain">
						<div class="col-6 text"><strong>Author:</strong> {{bookdetail.author}}</div>
						<div class="col-6 text"><strong>Publisher:</strong> {{bookdetail.publisher}}</div>
						<div class="col-6 text"><strong>Edition:</strong> {{bookdetail.edition}}</div>
						<div class="col-6 text"><strong>ISBN:</strong> {{bookdetail.isbn}}</div>
						<div class="col-6 text"><strong>Language:</strong> {{bookdetail.language}}</div>
						<div class="col-6 text"><strong>Condition:</strong> Good</div>
						<div class="col-6 text"><strong>Genre:</strong> {{bookdetail.genre}}</div>
						<div class="col-6 text"><strong></strong></div>
						<div class="col-6 text"><strong>Description:</strong><strong><a href="" id="description"
									class="menu-text text-dark ml-3 mr-3 pointer"></a></strong></div>
					</div>

					<div class="bookDesc">
						<hr>
						<p>{{bookdetail.description}}</p>
					</div>
					<div class="row mt-3 bookInfoMain">
						<div class="col-6 text"><strong>Reviews and Rating</strong>
							<p class="starRating mb-0">
								{% set sval = bookdetail.rating %}
								{% for i in range(1,5) %}
								{% if i <= sval %} <i class="fa fa-star"></i>
									{% endif %}
									{% set dif = i - sval %}
									{% if (dif >= 0.1) and (dif <= 0.5) %} <i class="fa fa-star-half-o"></i>
										{% set sval = sval + dif %}
										{% endif %}
										{% if i > sval %}
										<i class="fa fa-star-o"></i>
										{% endif %}
										{% endfor %}
							</p>
							<!-- all feedback list-->
							<div id="allfeedback-div">
								<br>
								{% for feedback in allbookfeedback %}
								<div class="feed-div">
									<h6>{{ feedback.feedback }}</h6>
									<span class="commenter">By <i>{{ feedback.commenter_name }}</i></span>
								</div>
								<br>
								{% endfor %}
								<p id="feedbackmsg"></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>